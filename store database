- create a store database
CREATE TABLE store ( id INTEGER PRIMARY KEY, item TEXT, section TEXT, price INTEGER, rating INTEGER);

INSERT INTO store VALUES (1, 'tank top', 'summer', 12.99, 5);
INSERT INTO store VALUES (2, 'strapless top', 'summer', 15, 4);
INSERT INTO store VALUES (3, 'turtleneck', 'winter', 20, 5);
INSERT INTO store VALUES (4, 'longsleeve', 'winter', 20, 4);
INSERT INTO store VALUES (5, 'denim shorts', 'summer', 18, 5);
INSERT INTO store VALUES (6, 'boots', 'fall', 10, 3);

- display database ordered by price
SELECT * FROM store ORDER BY price; 

- which items have the best rating?
SELECT item, price, rating
FROM store ORDER BY rating desc; 
